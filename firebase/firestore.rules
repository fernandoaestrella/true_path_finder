rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      
      // User's chosen goals
      match /chosenGoals/{goalId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's chosen methods with attempt tracking
      match /chosenMethods/{methodId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's RSVPs
      match /rsvps/{eventId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Goals collection - anyone can read, authenticated can create
    match /goals/{goalId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Methods collection - anyone can read, authenticated can create
    match /methods/{methodId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Reviews collection - anyone can read, authenticated can create their own
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
      
      // Event batches - participants can join/leave
      match /batches/{batchId} {
        allow read: if true;
        allow write: if isAuthenticated();
      }
    }
    
    // Groups collection
    match /groups/{groupId} {
      // General group readable by all, private groups by members only
      allow read: if resource.data.isGeneral == true || 
        (isAuthenticated() && request.auth.uid in resource.data.members);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
    }
  }
}
